page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}

.order-info{
   padding:15rpx 0rpx 10rpx 30rpx;
  background:#fff;
  height:auto;
  overflow:hidden;
  font-size: 28rpx;
}
.order-price-info{
    padding-top: 25rpx;
    background: #fff;
    margin-top: 20rpx;
    font-size: 28rpx;
}
.item-a{
    color: #666;
}

.item-b{
    color: #666;
}

.item-d{
    margin-left: 30rpx;
}
.item-c{
    margin-left: 30rpx;
    border-top: 1px solid #f4f4f4;
    height: 103rpx;
    line-height: 103rpx;
    margin-top:20rpx;
}

.item-c .l{
    float: left;
}

.item-c .r{
    height: 103rpx;
    float: right;
    display: flex;
    align-items: center;
    padding-right: 16rpx;
}

.item-c .r .btn{
    float: right;
}

.item-c .cost{
    color: #619433;
}

.item-c .btn{
    line-height: 66rpx;
    border-radius: 5rpx;
    text-align: center;
    margin: 0 15rpx;
    padding: 0 20rpx;
    height: 66rpx;
}

.item-c .pay-btn{
  padding: 0 35rpx;
    background: #619433;
    color: #fff;
}

.order-goods{
    margin-top: 20rpx;
    background: #fff;
}

.order-goods .h{
    height: 93.75rpx;
    line-height: 93.75rpx;
    margin-left: 30rpx;
    border-bottom: 1px solid #f4f4f4;
    padding-right: 30rpx;
}

.order-goods .h .label{
    float: left;
    font-size: 30rpx;
    color: #333;
}



.order-bottom{
    margin-top: 20rpx;
    padding-left: 30rpx;
    height: auto;
    overflow: hidden;
    background: #fff;
}

.address{
    background-image: url('http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/address-bg-bd30f2bfeb.png');
    background-repeat:  repeat-x;
    background-size: 62rpx 10rpx;
    padding-top: 10rpx;
    padding-left: 30rpx;
    background-color:#fff;
    font-size: 28rpx;
    padding-bottom:15rpx;
border-bottom:1rpx solid #eee;
}

.address .t{
    padding-top:10rpx;
}

.address .name{
    display: inline-block;
    width: 140rpx;
    line-height:35rpx;
}

.address .mobile{
    display: inline-block;
    line-height:35rpx;
}

.address .b{
}

.order-bottom .total{
    height: 106rpx;
    padding-top: 20rpx;
    border-bottom: 1px solid #f4f4f4;
}

.order-bottom .total .t{
    height: 25rpx;
    line-height: 25rpx;
    margin-bottom: 7.5rpx;
    display: flex;
}

.order-bottom .total .label{
    width: 140rpx;
    display: inline-block;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 24rpx;
}

.order-bottom .total .txt{
    flex: 1;
    display: inline-block;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 24rpx;
}

.order-bottom .pay-fee{
    height: 81rpx;
    line-height: 81rpx;
}

.order-bottom .pay-fee .label{
    display: inline-block;
    width: 140rpx;
    color: #619433;
}

.order-bottom .pay-fee .txt{
    display: inline-block;
    width: 140rpx;
    color: #619433;
}

/* 商品列表 */
.goods-items{
    margin-top: 20rpx;
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #fff;
    padding-left: 31.25rpx;
    margin-bottom: 120rpx;
}

.goods-items .item{
    height: 192rpx;
    padding-right: 31.25rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid rgba(0,0,0,0.15);
}

.goods-items .item.no-border{
    border-bottom: none;
}


.goods-items .item:last-child{
    border-bottom: none;
}

.goods-items .img{
    height: 145.83rpx;
    width: 145.83rpx;
    background-color: #f4f4f4;
    margin-right: 20rpx;
}

.goods-items .img image{
    height: 145.83rpx;
    width: 145.83rpx;
}

.goods-items .info{
    flex: 1;
    height: 145.83rpx;
    padding-top: 5rpx;
}

.goods-items .t{
    height:  33rpx;
    line-height: 33rpx;
    margin-bottom: 10rpx;
    overflow: hidden;
    font-size: 30rpx;
    color: #333;
}

.goods-items .t .name{
    display: block;
    float: left;
}

.goods-items .t .number{
    display: block;
    float: right;
    text-align: right;
}

.goods-items .m {
    height:  29rpx;
    overflow: hidden;
    line-height: 29rpx;
    margin-bottom: 25rpx;
    font-size: 25rpx;
    color: #666;
}

.goods-items .b {
    height:  41rpx;
    overflow: hidden;
    line-height: 41rpx;
    font-size: 30rpx;
    color: #333;
}
.market_price{
  margin-left:20rpx;
  font-size:22rpx;
  color:#808080;
  text-decoration:line-through;
}
/* 商品列表 end */