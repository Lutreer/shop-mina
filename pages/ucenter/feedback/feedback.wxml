<view class="container">
  <picker bindchange="bindPickerChange" value="{{typeIndex}}" range="{{array}}">
    <view class="picker">
      <view class="fb-type">
        <view class="type-label">{{array[typeIndex]}}</view>
        <image class="type-icon" src="http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/pickerArrow-a8b918f05f.png"></image>

      </view>
    </view>
  </picker>
  <view class="fb-body">
    <textarea class="content" maxlength="500"  placeholder="对我们商品、服务、程序，你还有什么建议吗？你还希望在“丫米”上买到什么？请告诉我们..."  value="{{content}}" bindinput="bindinputContent"/>
    <view class="text-count">最多500字</view>
  </view>
  <view class="fb-mobile">
    <view class="label">手机号码或微信号</view>
    <view class="mobile-box">
      <input class="mobile" placeholder="方便我们与你联系" value="{{contact}}"  bindinput="bindinputContact"/>
      <image class="clear-icon" src="http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/clear-fb-dd9d604f86.png"></image>
    </view>
  </view>

  <button class="fb-btn" bindtap='submit' maxlength="100" >提交</button>
</view>