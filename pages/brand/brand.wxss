.brand-list{
  display: flex;
  flex-direction: column;
}
.brand-list .item{
    width: 750rpx;
    height: 416rpx;
    position: relative;
    margin-bottom: 4rpx;
}

.brand-list .item .img-bg{
    width: 750rpx;
    height: 416rpx;
    overflow: hidden;
}

.brand-list .item .img-bg image{
    width: 750rpx;
    height: 416rpx;
}

.brand-list .item .txt-box{
 background-color:rgba(255, 255, 255, 0.45);
position:absolute;
bottom:0;
height:60rpx;
text-align:center;
width:100%;
line-height:60rpx;
}
.brand-list .item .txt-box .txt{
  color: #fff;
}
.brand-list .item .line{
    display: table-cell;
    vertical-align: middle;
    text-align: center;
    height: 63rpx;
    line-height: 63rpx;
}

.brand-list .item .line text{
    font-size: 35rpx;
    font-weight: 700;
    text-shadow: 1rpx 1rpx rgba(0,0,0,.32);
    color: #fff;
}

.brand-list .item .line .s{
    padding: 0 10rpx;
    font-size: 40rpx;
}